{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "skipLibCheck": true,
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
